@page
@model BLADE.TFS.HOMEGATE.WEB.Pages.WEBCONTORL.ListSettingsModel
@{
    ViewData["Title"] = "List HomgGate Settings";
}

<h2 class=" text-warning"> HomgGate Runtime Settings</h2>
<div class="row">
<div class="card border-primary mb-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <span><b>@Model.bind.mcminfo</b> </span> - <span>@Model.bind.mcmtype </span> 
    </div>

    <div class="card-body p-0  bg-dark text-info " style="max-height: 50vh; overflow: auto;">
        <pre class="m-3 p-3 border rounded text-break"
             style="white-space: pre-wrap; word-wrap: break-word; ">
            @Model.bind.mcmtext
        </pre>
    </div>

    <div class="card-footer text-muted  bg-dark text-white  py-1">
        <small>共 @Model.bind.mcmtext.Length 字符</small>
    </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col mb-3">Update</div>
    <div class="row">
        <div class="col mb-3">
            <form method="post" > 
                 
                <button type="submit" class="btn btn-primary" asp-page-handler="FixDebug"> Fix DEBUG mode</button>
                <br />
                <label for="wltext" class="form-label">本地白名单分组</label>
                <input type="text" class="form-control" id="wltext"  value=""  />
                <br />
                <label for="wlval" class="form-label">本地白名单地址</label>
                <input type="text" class="form-control" id="wlval" value="" />
                <button type="submit" class="btn btn-primary" asp-page-handler="AddWL"> 添加</button>
            </form>

        </div>

    </div>

</div>
